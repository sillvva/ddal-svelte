generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters", "relationJoins"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id            String      @id @default(cuid())
    name          String?
    email         String?     @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    characters    Character[]
    dms           DungeonMaster[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Character {
    id                  String   @id @default(cuid())
    name                String
    race                String?
    class               String?
    campaign            String?
    image_url           String?
    character_sheet_url String?
    user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId              String
    logs                Log[]
    created_at          DateTime @default(now())

    @@index([userId])
}

model Log {
    id                  String         @id @default(cuid())
    date                DateTime
    name                String
    description         String?       
    type                String         @default("game")
    dm                  DungeonMaster? @relation(fields: [dungeonMasterId], references: [id], onDelete: Cascade)
    dungeonMasterId     String?
    is_dm_log           Boolean        @default(false)
    applied_date        DateTime?      
    experience          Int
    acp                 Int
    tcp                 Int
    level               Int
    gold                Float
    dtd                 Int            @default(0)
    magic_items_gained  MagicItem[]    @relation("magic_items_gained")
    magic_items_lost    MagicItem[]    @relation("magic_items_lost")
    story_awards_gained StoryAward[]   @relation("story_awards_gained")
    story_awards_lost   StoryAward[]   @relation("story_awards_lost")
    character           Character?     @relation(fields: [characterId], references: [id], onDelete: SetDefault)
    characterId         String?        @default("")
    created_at          DateTime       @default(now())

    @@index([dungeonMasterId])
    @@index([characterId])
}

model DungeonMaster {
    id    String  @id @default(cuid())
    name  String
    DCI   String?
    uid   String?
    owner String
    logs  Log[]
    user  User?   @relation(fields: [owner], references: [id], onDelete: Cascade)

    @@index([owner])
}

model MagicItem {
    id           String  @id @default(cuid())
    name         String
    description  String?
    logGained    Log?    @relation("magic_items_gained", fields: [logGainedId], references: [id], onDelete: Cascade)
    logGainedId  String?
    logLost      Log?    @relation("magic_items_lost", fields: [logLostId], references: [id], onDelete: Cascade)
    logLostId    String?

    @@index([logGainedId])
    @@index([logLostId])
}

model StoryAward {
    id           String   @id @default(cuid())
    name         String
    description  String? 
    logGained    Log?     @relation("story_awards_gained", fields: [logGainedId], references: [id], onDelete: Cascade)
    logGainedId  String?
    logLost      Log?     @relation("story_awards_lost", fields: [logLostId], references: [id], onDelete: Cascade)
    logLostId    String?

    @@index([logGainedId])
    @@index([logLostId])
}
